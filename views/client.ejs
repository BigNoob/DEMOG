<body onLoad="Main('<%= exp.xpGame%>')">
    <header>
        <h1>D.E.M.O.G.</h1>
        <h3>Dictator Experiment through Multiplayer Online Game</h3>
        
    </header>
    <div class="centerDiv">
        <div class="infoHolder">
            <figure class="playerStatusHolder">
                <h3>Player Status</h3>
                <p id="id">Player ID: </p>
                <p id="repetition">Current Repetition: </p>
                <p id="score">Total Score: </p>
            </figure>
            <figure class="xpStatusHolder">
                <h3>Current Experiment</h3>
                <p id="xpName">Experience Name : <%= exp.xpName%></p>
                <p id="xpIter">Number of Repetition : <%= exp.xpMaxIter %></p>
                <p id="xpGame">Game : <%= exp.xpGame%></p>
            </figure>
        </div>

        <div class="canvasHolder">
            <canvas id="viewport" width=800 height=600 class="viewport">
                alternate content
            </canvas>
        </div>
    </div>
    <footer>
        <p>Olivier Allouard 2014</p>
    </footer>
</body>
</html>